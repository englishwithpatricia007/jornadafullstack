    }
  ],
  "paths": {
    "/api/artists":{
      "get":{
        "summary": "Listagem de artistas",
        "description": "Visualizar os artistas cadastrados",
        "responses": {
            "200" : {
              "description": "A lista de artistas",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array"
                  }
                }
              }
            }
        }
      }
    },
    "/api/songs":{
      "get":{
        "summary": "Listagem de músicas",
        "description": "Visualizar as músicas cadastrados",
        "responses": {
            "200" : {
              "description": "A lista de músicas",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array"
                  }
                }
              }
            }
        }
      }
    }
  }






